<Window x:Class="TestWoLaDLL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWoLaDLL"
        mc:Ignorable="d"
        Title="Test window" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <!--0-->
            <RowDefinition Height="7*"/>
            <!--1-->
            <RowDefinition Height="10"/>
            <!--2-->
            <RowDefinition Height="30"/>
            <!--3-->
            <RowDefinition Height="10"/>
            <!--4-->
            <RowDefinition Height="40"/>
            <!--5-->
            <RowDefinition Height="10"/>
            <!--6-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="InputBox" Grid.Row="1" Grid.Column="1" Focusable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible"/>
        <Button Name="Parsing" Content="Feldolgozás" Grid.Row="3" Grid.Column="1" Click="Parsing_Click" Width="150" Height="23" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Name="output" Grid.Column="1" Grid.Row="5" Content="Végeredmény" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
